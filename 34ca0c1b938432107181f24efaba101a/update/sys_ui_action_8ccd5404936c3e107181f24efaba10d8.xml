        <order>100</order>
        <script><![CDATA[(function executeAction(current, action) {
    var helper = new EapItemsDeepCopy(current);

    if (!helper.showCopyAction(current)) {
        gs.addErrorMessage("Copy action not allowed for this record.");
        return;
    }

    var result = helper.deepCopy(current);

    if (!gs.nil(result) && result.newRecordID) {
        var newGR = new GlideRecord(current.getTableName());
        if (newGR.get(result.newRecordID)) {
            // Success message with clickable link
            gs.addInfoMessage(
                "✅ Epic copied successfully! Opening the new copied epic: " +
                '<a href="' + newGR.getLink() + '" target="_blank">' +
                newGR.getDisplayValue('number') +
                '</a>'
            );

            // Redirect to the copied record
            action.setRedirectURL(newGR);
        } else {
            gs.addErrorMessage("Error: Copied record not found.");
        }
    } else {
        gs.addErrorMessage("❌ Epic copy failed.");
    }
})(current, action);
]]></script>
